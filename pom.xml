	<build>
		<plugins>		
			
			<!-- checkstyle -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
		             <failOnViolation>true</failOnViolation>
		             <enableRulesSummary>true</enableRulesSummary>
		             <configLocation>dev/common/checkstyle/awd_checkstyle.xml</configLocation>
				</configuration>
				<dependencies>
					<!-- dependency>
						<groupId>com.example.whizbang</groupId>
						<artifactId>build-tools</artifactId>
						<version>1.0</version>
						</dependency -->
				</dependencies>
			</plugin>			

			<!-- compiler -->		
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${maven.compile.source}</source>
					<target>${maven.compile.target}</target>
				</configuration>
			</plugin>

			<!-- war -->
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<warSourceDirectory>${basedir}/webapp</warSourceDirectory>
					<archive>
						<!-- >manifest>
							<addClasspath>true</addClasspath>
						</manifest -->
						<manifestEntries>
							<Project-Name>${project.name}</Project-Name>
							<Project-Version>${project.version}</Project-Version>
							<Project-Creator>${project.organization.name}</Project-Creator>
							<Project-CreatorId>${project.groupId}</Project-CreatorId>						
							<Project-Website>${project.url}</Project-Website>
							<Source-JDK>${maven.compile.source}</Source-JDK>
							<Target-JDK>${maven.compile.target}</Target-JDK>
							<Copyright>${project.organization.name}</Copyright>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>

			<!-- jar -->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<!-- >manifestEntries>
							<Implementation-Vendor-Id>www.my.com</Implementation-Vendor-Id>
							<Specification-Version>${pom.version}</Specification-Version>
							<Implementation-Version>${buildNumber}</Implementation-Version>
						</manifestEntries>
						<manifestFile>${basedir}/src/main/resources/MANIFEST.MF</manifestFile -->					
						<manifestEntries>
							<Project-Name>${project.name}</Project-Name>
							<Project-Version>${project.version}</Project-Version>
							<Project-Creator>${project.organization.name}</Project-Creator>
							<Project-CreatorId>${project.groupId}</Project-CreatorId>						
							<Project-Website>${project.url}</Project-Website>
							<Source-JDK>${maven.compile.source}</Source-JDK>
							<Target-JDK>${maven.compile.target}</Target-JDK>
							<Copyright>${project.organization.name}</Copyright>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>

			<!-- plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<configuration>
					<argLine>-Xmx500M</argLine>
				</configuration>
			</plugin -->

			<plugin>
				<artifactId>maven-idea-plugin</artifactId>
				<configuration>
					<jdkLevel>${maven.compile.source}</jdkLevel>
				</configuration>
			</plugin>
		</plugins>
		
		<!-- plugin management -->
		<pluginManagement>
			<plugins>

				<!-- eclipse -->			
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-eclipse-plugin</artifactId>
					<version>2.5.1</version>
					<configuration>
						<!-- add checkstyle to project nature -->
						<additionalProjectnatures>
							<projectnature>com.atlassw.tools.eclipse.checkstyle.CheckstyleNature</projectnature>
						</additionalProjectnatures>
						<!-- add checkstyle to build -->
						<buildcommands>
							<buildcommand>com.atlassw.tools.eclipse.checkstyle.CheckstyleBuilder</buildcommand>
							<buildcommand>org.eclipse.jdt.core.javabuilder</buildcommand>
						</buildcommands>
						
						<!-- >workspace>${basedir}/..</workspace-->
						<downloadSources>true</downloadSources>
						<downloadJavadocs>true</downloadJavadocs>
						<wtpversion>1.5</wtpversion>
						<additionalConfig>
							<!-- set formatter -->
							<file>
								<name>/.settings/org.eclipse.jdt.core.prefs</name>
								<location>/dev/common/eclipse/org.eclipse.jdt.core.prefs</location>
							</file>
							<!-- set cleanup -->
							<file>
								<name>/.settings/org.eclipse.jdt.ui.prefs</name>
								<location>/dev/common/eclipse/org.eclipse.jdt.ui.prefs</location>
							</file>
							<!-- Using utf8 -->
							<file>
								<name>/.settings/org.eclipse.core.resources.prefs</name>
								<location>/dev/common/eclipse/org.eclipse.core.resources.prefs</location>
							</file>
							<!--  Using \n as endl -->
							<file>
								<name>/.settings/org.eclipse.core.runtime.prefs</name>
								<location>/dev/common/eclipse/org.eclipse.core.runtime.prefs</location>
							</file>
							<!-- Using checkstyle configuration file -->
							<file>
								<name>.checkstyle</name>
								<location>/dev/common/eclipse/.checkstyle</location>
							</file>						
						</additionalConfig>
					</configuration>
				</plugin>




				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-gpg-plugin</artifactId>
					<version>1.0-alpha-3</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.1</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>
						maven-remote-resources-plugin
					</artifactId>
					<version>1.0-alpha-6</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-source-plugin</artifactId>
					<version>2.0.4</version>
				</plugin>
				<!-- >plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.3</version>
				</plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.2-beta-1</version>
				</plugin>
			</plugins>
		</pluginManagement>
		
	</build>





