<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.awired.parent</groupId>
	<artifactId>parent</artifactId>
	<packaging>pom</packaging>
	<version>1.9-SNAPSHOT</version>

	<name>Awired Parent</name>
	<description>
		Awired.net is an open source community composed of IT engineers and Professionals working together on personal projects.
		Our goal is to provide high quality softwares by using latest tools in application design and code analyze, and also by taking as much time as needed to ensure the best.  
	</description>
	<url>http://awired.net/</url>

	<!-- organisation -->
	<organization>
		<name>Awired Network</name>
		<url>http://awired.net/</url>
	</organization>
	
	<!-- default properties -->
	<properties>
		<organization.logo>http://awired.net/images/awired.png</organization.logo>

		<sourceEncoding>UTF-8</sourceEncoding>
		<outputEncoding>UTF-8</outputEncoding>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>	
	
	<prerequisites>
		<maven>2.0.9</maven>
	</prerequisites>

	<!-- licence -->
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<!-- scm -->
	<scm>
	    <connection>scm:git:git://github.com/awired/${project.artifactId}.git</connection>
        <developerConnection>scm:git:git@github.com:awired/${project.artifactId}.git</developerConnection>
		<url>https://github.com/awired/${project.artifactId}</url>
	</scm>

	<!-- bugtracker -->
	<issueManagement>
		<system>Github</system>
		<url>https://github.com/awired/${project.artifactId}/issues</url>
	</issueManagement>

	<!-- continuous integration -->
	<ciManagement>
		<system>Jenkins</system>
		<url>http://ci.awired.net/jenkins/job/${project.groupId}_${project.artifactId}/</url>
		<notifiers>
			<notifier>
				<type>mail</type>
				<configuration>
					<address>dev@awired.net</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>


	<!-- modules -->
	<modules>
		<module>modules/checkstyle</module>
		<module>modules/eclipse</module>
		<module>modules/pmd</module>

		<module>projs/java</module>
	</modules>

	<!-- dependency management -->
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>net.awired.parent</groupId>
				<artifactId>parent-module-checkstyle</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.parent</groupId>
				<artifactId>parent-module-eclipse</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.parent</groupId>
				<artifactId>parent-module-pmd</artifactId>
				<version>${project.version}</version>
			</dependency>

			<dependency>
				<groupId>net.awired.parent.parent-java</groupId>
				<artifactId>parent-java</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<build>
		<defaultGoal>clean install</defaultGoal>

		<plugins>
			<!-- scm -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<version>1.4</version>
				<!--
					<connectionType>connection</connectionType>
					<username>${scm.username}</username>
					<password>${scm.password}</password> <goals>install</goals>
					</configuration -->
			</plugin>

			<!-- release -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<username>${scm.username}</username>
					<password>${scm.password}</password>
				</configuration>
			</plugin>


			<!-- website -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<siteDirectory>src/site</siteDirectory>
					<!--
						templateDirectory>${basedir}</templateDirectory>
						<template>maven-site.vm</template -->
					<locales>en,fr</locales>
				</configuration>
			</plugin>
		</plugins>

		<extensions>
			<!-- webdav wagon -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav</artifactId>
				<version>1.0-beta-2</version>
			</extension>
		</extensions>
	</build>

	<!-- additionnal maven repositories -->
	<repositories>
		<repository>
			<id>awired-repo</id>
			<name>Awired Releases Repository</name>
			<url>http://mvn.awired.net/nexus/content/repositories/releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

		<repository>
			<id>awired-snap-repo</id>
			<name>Awired Snapshots Repository</name>
			<url>http://mvn.awired.net/nexus/content/repositories/snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<!-- distribution part -->
	<distributionManagement>
		<!-- repository -->
		<repository>
			<id>awired-repo</id>
			<name>Awired Releases Repository</name>
			<url>dav:http://mvn.awired.net/nexus/content/repositories/releases/</url>
		</repository>
		<!-- snapshot repository -->
		<snapshotRepository>
			<id>awired-snap-repo</id>
			<name>Awired Snapshot Repository</name>
			<url>dav:http://mvn.awired.net/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
		<site>
			<id>awired-web</id>
			<name>awired web deployment</name>
			<url>dav:http://projs.awired.net/parent</url>
		</site>
	</distributionManagement>

</project>
